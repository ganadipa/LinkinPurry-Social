FROM node:20-alpine

# Set the working directory
WORKDIR /app/backend

# Install dependencies
COPY package*.json ./

COPY prisma ./prisma
RUN npm install

# Copy source code and config
COPY . .

# TypeScript configuration
COPY tsconfig.json ./

COPY ./.env.example ./.env

ENV PORT=3000

EXPOSE 3000

CMD ["node", "index.js"]
